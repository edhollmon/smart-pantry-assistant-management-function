{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
